<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>我要註冊</h2>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 well">
        <%= f.input :email, label: false, required: true, autofocus: true, placeholder: '輸入帳號 (Email)' %>
        <%= f.input :name,  label: false, required: true, autofocus: true, placeholder: '輸入暱稱' %>
        <%= f.input :password, label: false, required: true, hint: ("至少 #{@minimum_password_length} 個字母或數字" if @minimum_password_length), placeholder: '設定您的密碼' %>
        <%= f.input :password_confirmation, label: false, required: true, placeholder: '確認您的密碼' %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 text-right">
        <div><%= f.button :submit, "Sign up", class: 'btn btn-primary' %></div>
        <div><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
<% end %>
