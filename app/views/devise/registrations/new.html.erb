<div id="page-header">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <h2>加入 oPartTime！</h2>
    </div>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-5 col-md-offset-1 devise-sign-block">
      <div class="devise-sign-form">
        <div class="form-inputs">
          <div class="well">
            <%= f.input :email, label: false, required: false, autofocus: true, placeholder: '輸入帳號 (Email)' %>
            <%= f.input :name,  label: false, required: true, placeholder: '輸入暱稱' %>
            <%= f.input :password, label: false, required: true, hint: ("至少 #{@minimum_password_length} 個字母或數字" if @minimum_password_length), placeholder: '設定您的密碼' %>
            <%= f.input :password_confirmation, label: false, required: true, placeholder: '確認您的密碼' %>
          </div>
        </div>
        
        <div class="form-actions">
          <div class="text-right"><%= f.button :submit, "填好了！", class: 'btn btn-primary' %></div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="devise-sign-oauth">
        <%= render "devise/shared/omniauth_links" %>
      </div>
    </div>
  </div>
  
  <div class="devise-links">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
        <div><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
<% end %>