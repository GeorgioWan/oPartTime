<div id="page-header">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <h2>還沒收到驗證信嗎？</h2>
    </div>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
        <%= f.input :email, label: false, required: true, autofocus: true, placeholder: '請輸入您的信箱' %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 text-center">
        <%= f.button :submit, "重新寄送驗證碼" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 text-right">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
