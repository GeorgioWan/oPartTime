%nav#oPartTime-navbar-admin.navbar.navbar-default.shadow-z-1{role:"navigation"}
  .container-fluid
    .navbar-header
      = link_to admin_accepted_path, class: "navbar-brand navbar-brand-logo" do
        %strong oPartTime
        %span.badge.badge-admin= "admin"
      %button.navbar-toggle{"data-target" => "#oPartTime-navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only switch guide
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

    #oPartTime-navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li#li_admin.shadow-z-1
          = link_to jobs_path do
            .fa.fa-chevron-left= " Go Back"
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          - if user_signed_in?
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: '#'}
              %span
                = image_tag current_user.avatar_url(:pinkie), class: "user-edit-avatar-pinkie shadow-z-1"
                = "#{current_user.name} 管理員"
                %b.caret
            %ul.dropdown-menu
              %li
                = link_to current_user do
                  %i.fa.fa-user
                  我的資料
              - if current_user.admin
                %li
                  = link_to admin_accepted_path do
                    %i.fa.fa-cog
                    審核貼文
              %li.divider
              %li
                = link_to destroy_user_session_path, method: :delete, rel: "nofollow" do
                  %i.fa.fa-sign-out
                  登出
