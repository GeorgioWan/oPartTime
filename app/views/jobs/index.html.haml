.job-index-title-image.shadow-z-2
  = image_tag 'CityAnd101.jpg', id: 'job-index-title-image'

.job-index-city-tab
  .ul.nav.nav-pills
    - @cities.each do |city|
      = btn_group_link_to city[0], "/#{city[1]}"

.job-index-container
  - if @jobs.empty?
    .text-center
      %h3= "喔！目前沒有兼職工作。"
  - @jobs.each do |job|
    .col-md-3
      #job-index-box
        = link_to job.title, job, target: "_blank", class: "list-group-item", id: "job-index-box-heading"
        = link_to job, target: "_blank", class: "list-group-item", id: "job-index-box-body" do
          %i.glyphicon.glyphicon-usd
            %sapn#job-index-box-price= job.pay
            %span /hr
        = link_to job, target: "_blank", class: "list-group-item", id: "job-index-box-footer" do
          %i.glyphicon.glyphicon-map-marker
            %span= get_location(job)
        %span#job-index-box-favorite= link_to '', '#', class: 'btn btn-primary btn-fab btn-raised mdi-action-favorite'
